<h1>My tasks</h1>

<% @tasks.each do |task| %>
<div style="display: flex;">
  <% if task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
    <h2><%= link_to task.tittle, task_path(task) %> </h2>
    <p><%= link_to "Delete", task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %></p>
        </div>
  <% end %>



<%= link_to "Create a new task", tasks_new_path %>
